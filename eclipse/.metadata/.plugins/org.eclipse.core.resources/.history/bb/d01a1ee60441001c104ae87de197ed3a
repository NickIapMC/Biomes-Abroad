package znick_.biomesabroad.biome.retro;

import java.awt.Color;
import java.util.Random;

import net.minecraft.world.World;
import net.minecraft.world.biome.BiomeGenBase;
import znick_.biomesabroad.biome.StructureGenerator;
import znick_.biomesabroad.biome.biomes.BiomeBase;
import znick_.biomesabroad.biome.cartoonhills.deco.CartoonTreeGenerator;
import znick_.biomesabroad.biome.cartoonhills.deco.CartoonGrassGenerator;
import znick_.biomesabroad.generation.flower.FlowerIce;
import znick_.biomesabroad.generation.flower.FlowerSpaceInvader;
import znick_.biomesabroad.registry.BiomesAbroadBlocks;
import net.minecraftforge.common.BiomeDictionary.Type;

public class Retro extends BiomeBase {
	
	public Retro(int id) {
		super(id);
		this.setBiomeName("Retro");

		this.heightVariation = 0.1F;
		this.enableSnow = false;
		this.topBlock = BiomesAbroadBlocks.blockRetroGrass;
		this.fillerBlock = BiomesAbroadBlocks.blockRetroDirt;
		this.theBiomeDecorator.flowersPerChunk = 0;
		this.theBiomeDecorator.generateLakes = false;
		this.waterColorMultiplier = (new Color(0, 0, 0)).getRGB();
		this.type = Type.PLAINS;
	}

	@Override
	public void decorate(World world, Random rand, int chunkX, int chunkZ) {
		super.decorate(world, rand, chunkX, chunkZ);
		
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, FlowerSpaceInvader.class, 5); 
	}

}
