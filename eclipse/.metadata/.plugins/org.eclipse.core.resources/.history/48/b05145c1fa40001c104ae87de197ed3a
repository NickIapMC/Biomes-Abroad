package znick_.biomesabroad.biome.util;

import net.minecraft.world.WorldType;
import net.minecraft.world.gen.layer.GenLayer;
import net.minecraft.world.gen.layer.GenLayerBiome;
import net.minecraft.world.gen.layer.GenLayerBiomeEdge;
import net.minecraft.world.gen.layer.GenLayerZoom;
import znick_.biomesabroad.biome.BiomesAbroadGenLayer;

public class WorldTypeBiomesAbroad extends WorldType {

	public WorldTypeBiomesAbroad(String name) {
		super(name);
	}

	@Override
	public GenLayer getBiomeLayer(long worldSeed, GenLayer parentLayer) {
		GenLayer ret = new BiomesAbroadGenLayer(200L, parentLayer, this);
		ret = GenLayerZoom.magnify(1000L, ret, 2);
		ret = new GenLayerBiomeEdge(1000L, ret);
		return ret;
	}
}
