import znick_.biomesabroad.registry.BiomesAbroadBlocks;
import znick_.biomesabroad.util.helper.BAMathHelper;

public class BiomeStarfield extends BiomeBase {
	
	public BiomeStarfield(int id) {
		super(id);
		this.setBiomeName("Starfield");

		this.heightVariation = 0.1F;
		this.enableSnow = false;
		this.topBlock = BiomesAbroadBlocks.blockStargrass;
		this.fillerBlock = BiomesAbroadBlocks.blockStardirt;
		this.waterColorMultiplier = (new Color(0, 0, 0)).getRGB();
		this.type = Type.PLAINS;
	}

	@Override
	public BiomeDecorator createBiomeDecorator() {
        return getModdedBiomeDecorator(new DecoratorStarfield());
    }
	
	@Override
	public void decorate(World world, Random rand, int chunkX, int chunkZ) {
		super.decorate(world, rand, chunkX, chunkZ);
		
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, FlowerStar.class, 5); 
	} 

	@Override
	public int getSkyColorByTemp(float temp) {
		return (new Color(0, 0, 0)).getRGB();
	}

}
