package znick_.biomesabroad.biome.biomes;

import java.awt.Color;
import java.util.Random;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.init.Blocks;
import net.minecraft.util.WeightedRandom;
import net.minecraft.world.World;
import net.minecraft.world.biome.BiomeDecorator;
import net.minecraft.world.biome.BiomeGenBase;
import net.minecraft.world.biome.BiomeGenBase.FlowerEntry;
import net.minecraft.world.gen.feature.WorldGenMelon;
import net.minecraft.world.gen.feature.WorldGenVines;
import net.minecraft.world.gen.feature.WorldGenerator;
import znick_.biomesabroad.biome.decorator.DecoratorCartoonHills;
import znick_.biomesabroad.biome.decorator.DecoratorPirateShores;
import znick_.biomesabroad.biome.decorator.DecoratorWasteland;
import znick_.biomesabroad.block.BlockBase;
import znick_.biomesabroad.generation.StructureGenerator;
import znick_.biomesabroad.generation.bush.BushTumbleweed;
import znick_.biomesabroad.generation.grass.GrassCartoon;
import znick_.biomesabroad.generation.grass.GrassDesertFan;
import znick_.biomesabroad.generation.slab.SlabSandstone;
import znick_.biomesabroad.generation.structure.StructureBuriedTreasure;
import znick_.biomesabroad.generation.tree.TreeCartoon;
import znick_.biomesabroad.generation.tree.TreeDead;
import znick_.biomesabroad.generation.tree.TreePalm;
import znick_.biomesabroad.util.helper.BAMathHelper;
import znick_.biomesabroad.util.manager.BiomesAbroadBlocks;
import net.minecraftforge.common.BiomeDictionary.Type;

public class BiomePirateShores extends BiomeBase {
	
	public BiomePirateShores(int id) {
		super(id);
		this.setBiomeName("Pirate Shores");

		this.heightVariation = 0.1F;
		this.enableSnow = false;
		this.topBlock = Blocks.sand;
		this.fillerBlock = Blocks.sandstone;
		
		this.theBiomeDecorator.cactiPerChunk = 30;
		this.theBiomeDecorator.deadBushPerChunk = 15;
		
		this.type = Type.BEACH;
	}
	
	@Override
	public BiomeDecorator createBiomeDecorator() {
        return getModdedBiomeDecorator(new DecoratorPirateShores());
    }

	@Override
	public void decorate(World world, Random rand, int chunkX, int chunkZ) {
		super.decorate(world, rand, chunkX, chunkZ);
		
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, TreePalm.class, 0.75F);
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, SlabSandstone.class, 1000);
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, GrassDesertFan.class, 16);
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, StructureBuriedTreasure.class, 0.02F);
	}
	
	@Override
	public int getBiomeFoliageColor(int x, int y, int z) {
		return (new Color(0, 255, 0)).getRGB();
    }

}
