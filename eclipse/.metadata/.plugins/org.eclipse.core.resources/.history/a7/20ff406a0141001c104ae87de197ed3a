package znick_.biomesabroad.biome.pirateshores;

import java.awt.Color;
import java.util.Random;

import net.minecraft.init.Blocks;
import net.minecraft.world.World;
import net.minecraftforge.common.BiomeDictionary.Type;
import znick_.biomesabroad.biome.BaseBiome;
import znick_.biomesabroad.biome.pirateshores.deco.PalmTreeGenerator;
import znick_.biomesabroad.biome.pirateshores.deco.SandstoneSlabGenerator;
import znick_.biomesabroad.generation.StructureGenerator;
import znick_.biomesabroad.generation.structure.StructureBuriedTreasure;
import znick_.biomesabroad.registry.BiomesAbroadBlocks;

public class PirateShores extends BaseBiome {
	
	public PirateShores() {
		super(PirateShoresDecorator.class, Type.BEACH);
		this.setBiomeName("Pirate Shores");

		this.heightVariation = 0.1F;
		this.enableSnow = false;
		this.setBlocks(Blocks.sandstone, Blocks.sandstone);
		
		this.theBiomeDecorator.cactiPerChunk = 30;
		this.theBiomeDecorator.deadBushPerChunk = 15;
		
		this.addStructure(new PalmTreeGenerator(), 0.75F);
	}

	@Override
	public void decorate(World world, Random rand, int chunkX, int chunkZ) {
		super.decorate(world, rand, chunkX, chunkZ);
		
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, new PalmTreeGenerator(), 0.75F);
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, new SandstoneSlabGenerator(), 1000);
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, BiomesAbroadBlocks.plantDesertFan, Blocks.sand, 16);
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, new StructureBuriedTreasure(), 0.02F);
	}
	
	@Override
	public int getBiomeFoliageColor(int x, int y, int z) {
		return (new Color(0, 255, 0)).getRGB();
    }

}
