package znick_.biomesabroad.biome.decorator.base;

import java.util.Random;

import net.minecraft.world.World;
import net.minecraft.world.biome.BiomeDecorator;
import net.minecraft.world.biome.BiomeGenBase;

public class BABiomeDecorator extends BiomeDecorator {

	@Override
	public void decorateChunk(World world, Random random, BiomeGenBase biome, int chunkX, int chunkZ) {
		if (this.currentWorld != null) {
			return;
		} else {
			this.currentWorld = world;
			this.randomGenerator = new RandomForcedPositiveOwned(random);
			this.chunk_X = chunkX;
			this.chunk_Z = chunkZ;
			this.genDecorations(biome);
			this.currentWorld = null;
			this.randomGenerator = null;
		}
	}
}
