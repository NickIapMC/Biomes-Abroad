import net.minecraftforge.common.BiomeDictionary.Type;

public class BiomeCherryForest extends BaseBiome {
	
	public BiomeCherryForest(int id) {
		super(id);
		this.setBiomeName("Cherry Forest");

		this.heightVariation = 0.0F;
		this.enableSnow = false;
		this.topBlock = BiomesAbroadBlocks.blockCherryGrass;
		this.fillerBlock = BiomesAbroadBlocks.blockCherryDirt;
		this.theBiomeDecorator.treesPerChunk = 8;
		this.type = Type.FOREST;
	}

	@Override
	public void decorate(World world, Random rand, int chunkX, int chunkZ) {
		super.decorate(world, rand, chunkX, chunkZ);
		StructureGenerator.generateStructure(world, rand, chunkX, chunkZ, this.rootHeight, BiomesAbroadBlocks.plantCherryGrass, BiomesAbroadBlocks.blockCherryGrass, 64);
	}
	
	@Override
	public int getBiomeFoliageColor(int x, int y, int z) {
		float hue = 300/360;
		float sat = 0.3f;
		float bright = 1;
		return Color.HSBtoRGB(hue, sat, bright);
    }

}
