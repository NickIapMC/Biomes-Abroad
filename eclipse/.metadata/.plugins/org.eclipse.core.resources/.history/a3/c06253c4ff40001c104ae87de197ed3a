package znick_.biomesabroad.biome.cartoonhills;

import java.util.Random;

import net.minecraft.world.World;
import net.minecraftforge.common.BiomeDictionary.Type;
import znick_.biomesabroad.biome.BaseBiome;
import znick_.biomesabroad.biome.cartoonhills.deco.CartoonTree;
import znick_.biomesabroad.generation.StructureGenerator;
import znick_.biomesabroad.generation.grass.GrassCartoon;
import znick_.biomesabroad.registry.BiomesAbroadBlocks;

public class CartoonHills extends BaseBiome {
	
	public CartoonHills() {
		super(CartoonHillsDecorator.class, Type.PLAINS);
		this.setBiomeName("Cartoon Hills");

		this.heightVariation = 0.4F;
		this.enableSnow = false;
		this.setBlocks(BiomesAbroadBlocks.blockCartoonGrass, BiomesAbroadBlocks.blockCartoonDirt);
		this.theBiomeDecorator.generateLakes = false;
		this.theBiomeDecorator.flowersPerChunk = 0;
		
		this.addStructure(new CartoonTree(), 0.75F);
		this.addStructure(BiomesAbroadBlocks.plantCartoonGrass, BiomesAbroadBlocks.blockCartoonGrass, 64);
	}

}
